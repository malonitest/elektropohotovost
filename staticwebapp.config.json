{
	"globalHeaders": {
		"X-Content-Type-Options": "nosniff",
		"Referrer-Policy": "strict-origin-when-cross-origin",
		"X-Frame-Options": "DENY",
		"Permissions-Policy": "geolocation=(), microphone=(), camera=()",
		"Content-Security-Policy": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; frame-src https://www.google.com; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' https://www.clarity.ms https://scripts.clarity.ms; connect-src 'self' https://www.clarity.ms https://c.clarity.ms https://a.clarity.ms"
	},
	"routes": [
		{ "route": "/favicon.ico", "redirect": "/favicon.svg", "statusCode": 302 },
		{ "route": "/assets/*", "headers": { "cache-control": "public, max-age=31536000, immutable" } },
		{ "route": "/_next/static/*", "headers": { "cache-control": "public, max-age=31536000, immutable" } },

		{ "route": "/sluzby", "redirect": "/sluzby/", "statusCode": 301 },
		{ "route": "/kontakt", "redirect": "/kontakt/", "statusCode": 301 },
		{ "route": "/lokality", "redirect": "/lokality/", "statusCode": 301 },
		{ "route": "/faq", "redirect": "/faq/", "statusCode": 301 },
		{ "route": "/cenik", "redirect": "/cenik/", "statusCode": 301 },
		{ "route": "/legal", "redirect": "/legal/", "statusCode": 301 },
		{ "route": "/blog", "redirect": "/blog/", "statusCode": 301 },
		{ "route": "/blog/kategorie", "redirect": "/blog/kategorie/", "statusCode": 301 }
	],
	"responseOverrides": {
		"404": {
			"rewrite": "/404/index.html"
		}
	}
}
