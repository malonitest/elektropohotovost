---
export type Props = {
	h1: string;
	kicker?: string;
	badges?: string[];
	cta?: { href: string; text: string };
	ctaNote?: string;
};

const { h1, kicker, badges = [], cta, ctaNote } = Astro.props;
---
<section class="section">
	{typeof kicker === "string" && <div class="kicker">{kicker}</div>}
	<h1 class="h1">{h1}</h1>
	{badges.length > 0 && (
		<div style="display:flex;gap:10px;flex-wrap:wrap">
			{badges.map((b) => (
				<span class="badge"><strong>â€¢</strong> {b}</span>
			))}
		</div>
	)}
	{cta?.href && cta?.text ? (
		<div style="margin-top:12px">
			<a class="btn btnDanger" href={cta.href}>{cta.text}</a>
			{typeof ctaNote === "string" && ctaNote.trim() ? (
				<div class="hint" style="margin-top:8px">{ctaNote}</div>
			) : null}
		</div>
	) : null}
</section>
